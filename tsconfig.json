{
    "compilerOptions": {
        "baseUrl": ".",
        "sourceRoot": "api",
        "outDir": "dist",
        "module": "CommonJS",
        "target": "ESNext",
        "sourceMap": true,
        "allowJs": false,
        "skipLibCheck": true,
        "declaration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "isolatedModules": false,
        "suppressImplicitAnyIndexErrors": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "newLine": "LF",
        "noEmit": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "jsx": "react-jsx",
        "lib": ["ESNext", "DOM", "DOM.Iterable", "ESNext.AsyncIterable"],
        "typeRoots": ["./node_modules/@types"],
        "paths": {
            "@api/handlers": ["api/handlers"],
            "@api/constants": ["api/constants"],
            "@api/services": ["api/services"],
            "@api/dtos/in": ["api/dtos/in"],
            "@api/dtos/out": ["api/dtos/out"],
            "@api/dtos/common": ["api/dtos/common"],
            "@api/configs": ["api/configs"],
            "@api/configs/*": ["api/configs/*"],
            "@api/repositories": ["api/repositories"],
            "@api/utils": ["api/utils"],
            "@api/hooks": ["api/hooks"],
            "@api/routes": ["api/routes"],
            "@api/interfaces": ["api/interfaces"],
            "#package.json": ["./package.json"]
        }
    },
    "include": ["web-ui", "**/*.js", "**/*.ts", "**/*.tsx", "*.cjs", ".commitlintrc"],
    "exclude": ["node_modules", "dist", "coverage"],
    "linterOptions": {
        "exclude": []
    },
    "references": [{ "path": "./tsconfig.node.json" }]
}
