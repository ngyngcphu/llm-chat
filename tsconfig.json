{
    "compilerOptions": {
        "baseUrl": ".",
        "sourceRoot": "api",
        "outDir": "dist",
        "module": "ESNext",
        "target": "ESNext",
        "sourceMap": true,
        "allowJs": false,
        "skipLibCheck": true,
        "declaration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "Node",
        "isolatedModules": false,
        "suppressImplicitAnyIndexErrors": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "newLine": "LF",
        "noEmit": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "jsx": "react-jsx",
        "lib": ["ESNext", "DOM", "DOM.Iterable", "ESNext.AsyncIterable"],
        "typeRoots": ["./node_modules/@types"],
        "paths": {
            "@api/handlers": ["api/handlers"],
            "@api/constants": ["api/constants"],
            "@api/services": ["api/services"],
            "@api/dtos/in": ["api/dtos/in"],
            "@api/dtos/out": ["api/dtos/out"],
            "@api/dtos/common": ["api/dtos/common"],
            "@api/configs": ["api/configs"],
            "@api/configs/*": ["api/configs/*"],
            "@api/repositories": ["api/repositories"],
            "@api/utils": ["api/utils"],
            "@api/hooks": ["api/hooks"],
            "@api/routes": ["api/routes"],
            "@api/interfaces": ["api/interfaces"],
            "#package.json": ["./package.json"],

            "@ui/assets/*": ["web-ui/assets/*"],
            "@ui/components": ["web-ui/components"],
            "@ui/constants": ["web-ui/constants"],
            "@ui/hooks": ["web-ui/hooks"],
            "@ui/interfaces": ["web-ui/interfaces"],
            "@ui/layouts": ["web-ui/layouts"],
            "@ui/pages": ["web-ui/pages"],
            "@ui/services": ["web-ui/services"],
            "@ui/states": ["web-ui/states"],
            "@ui/utils": ["web-ui/utils"],
            "@api/spec": ["web-ui/openapi-spec.ts"],
        }
    },
    "ts-node": {
        "experimentalSpecifierResolution": "node",
        "transpileOnly": true,
        "esm": true,
        "require": ["tsconfig-paths/register"]
    },
    "include": ["web-ui", "**/*.js", "**/*.ts", "**/*.tsx", "*.cjs", ".commitlintrc", "prisma/seed.ts"],
    "exclude": ["node_modules", "dist", "coverage"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
