{
  "name": "llm-chat",
  "version": "1.0.0",
  "license": "ISC",
  "repository": "git@github.com:ngyngcphu/llm-chat.git",
  "description": "",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "is-ci || husky install && yarn api:pull",
    "barrels": "barrelsby --config .barrelsby.json -q",
    "lint": "eslint '**/*.{tsx,ts,js}'",
    "lint:fix": "eslint '**/*.{tsx,ts,js}' --fix",
    "format": "prettier '**/*.{tsx,ts,js,json,md,yml,yaml}' --write",
    "clean:git": "git branch --merged >/tmp/merged-branches && nano /tmp/merged-branches && xargs git branch -D </tmp/merged-branches && git fetch --prune --all",
    "api:bootstrap": "yarn start:docker && yarn && yarn db:migrate && npx prisma db seed",
    "api:start": "yarn barrels && cross-env NODE_ENV=development tsx watch --ignore node_modules api/index.ts",
    "api:build": "tsc --project tsconfig.compile.json && tsc-alias",
    "api:start:docker": "docker compose -f docker-compose.dev.yml up -d",
    "api:clean:docker": "docker compose -f docker-compose.dev.yml down --volumes --remove-orphans",
    "db:migrate": "npx prisma migrate dev",
    "db:reset": "npx prisma migrate reset --force",
    "db:deploy": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "ui:start": "yarn barrels && cross-env NODE_ENV=development vite --host",
    "ui:build": "tsc && cross-env NODE_ENV=production vite build",
    "api:pull": "openapi-typescript http://localhost:8080/docs/json -o web-ui/openapi-spec.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^9.2.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/sensible": "^5.5.0",
    "@fastify/swagger": "^8.13.0",
    "@fastify/swagger-ui": "^2.0.1",
    "@heroicons/react": "^2.1.3",
    "@material-tailwind/react": "^2.1.9",
    "@prisma/client": "^5.7.1",
    "@sinclair/typebox": "^0.32.5",
    "@tanstack/react-query": "^5.32.0",
    "ai": "^3.0.33",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "envalid": "^8.0.0",
    "fastify": "^4.25.2",
    "gray-matter": "^4.0.3",
    "js-tiktoken": "^1.0.11",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "natural": "^7.0.5",
    "openai": "^4.38.2",
    "openapi-fetch": "^0.9.4",
    "prisma": "^5.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.0",
    "react-textarea-autosize": "^8.5.3",
    "react-toastify": "^10.0.5",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@tanstack/eslint-plugin-query": "^5.28.11",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.7",
    "@types/react": "18.2.42",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "barrelsby": "^2.8.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.0",
    "openapi-typescript": "^7.0.0-next.10",
    "pino-pretty": "^10.3.1",
    "postcss": "^8.4.38",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.3",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.2",
    "typescript": "^5.3.3",
    "vite": "^5.2.10",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
